    <script>
        // Data storage
        let appointments = [
            {
                id: 1,
                fio: '–ò–≤–∞–Ω –ò–≤–∞–Ω–æ–≤',
                animal: '–°–æ–±–∞–∫–∞',
                nickname: '–ú—É—Ö—Ç–∞—Ä',
                phone: '+7 (999) 123-45-67',
                date: '2025-12-15',
                time: '14:30'
            },
            {
                id: 2,
                fio: '–ò–≤–∞–Ω –ò–≤–∞–Ω–æ–≤',
                animal: '–ö–æ—à–∫–∞',
                nickname: '–ú—É—Ä–∫–∞',
                phone: '+7 (999) 123-45-67',
                date: '2025-12-20',
                time: '10:00'
            }
        ];

        let currentEditingId = null;

        // Page navigation
        function goToPage(pageName) {
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => page.classList.remove('active'));

            const selectedPage = document.getElementById(pageName);
            if (selectedPage) {
                selectedPage.classList.add('active');
            }

            // Update nav menu
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => link.classList.remove('active'));
            document.querySelector(`[data-page="${pageName}"]`).classList.add('active');

            // Scroll to top
            window.scrollTo(0, 0);

            // Render content for specific pages
            if (pageName === 'dashboard') {
                renderAppointments();
            } else if (pageName === 'admin') {
                renderAdminTable();
            }
        }

        // Navigation event listeners
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const pageName = link.getAttribute('data-page');
                goToPage(pageName);
            });
        });

        // Render appointments on dashboard
        function renderAppointments() {
            const appointmentsList = document.getElementById('appointmentsList');
            const noAppointments = document.getElementById('noAppointments');

            appointmentsList.innerHTML = '';

            if (appointments.length === 0) {
                noAppointments.style.display = 'block';
                appointmentsList.style.display = 'none';
                return;
            }

            noAppointments.style.display = 'none';
            appointmentsList.style.display = 'grid';

            appointments.forEach(apt => {
                const card = document.createElement('div');
                card.className = 'appointment-card';
                card.innerHTML = `
                    <div class="appointment-grid">
                        <div class="appointment-field">
                            <label>–§–ò–û</label>
                            <span>${apt.fio}</span>
                        </div>
                        <div class="appointment-field">
                            <label>–ñ–∏–≤–æ—Ç–Ω–æ–µ</label>
                            <span>${apt.animal}</span>
                        </div>
                        <div class="appointment-field">
                            <label>–ö–ª–∏—á–∫–∞</label>
                            <span>${apt.nickname}</span>
                        </div>
                        <div class="appointment-field">
                            <label>–¢–µ–ª–µ—Ñ–æ–Ω</label>
                            <span>${apt.phone}</span>
                        </div>
                        <div class="appointment-field">
                            <label>–î–∞—Ç–∞</label>
                            <span>${formatDate(apt.date)}</span>
                        </div>
                        <div class="appointment-field">
                            <label>–í—Ä–µ–º—è</label>
                            <span>${apt.time}</span>
                        </div>
                    </div>
                    <div class="appointment-actions">
                        <button class="btn btn-secondary btn-small" onclick="openEditModal(${apt.id})">‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å</button>
                        <button class="btn btn-danger btn-small" onclick="deleteAppointment(${apt.id})">üóëÔ∏è –£–¥–∞–ª–∏—Ç—å</button>
                    </div>
                `;
                appointmentsList.appendChild(card);
            });
        }

        // Render admin table
        function renderAdminTable() {
            const tableBody = document.getElementById('adminTableBody');
            const noRecords = document.getElementById('noRecords');

            tableBody.innerHTML = '';

            if (appointments.length === 0) {
                noRecords.style.display = 'block';
                return;
            }

            noRecords.style.display = 'none';

            appointments.forEach(apt => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${apt.fio}</td>
                    <td>${apt.animal}</td>
                    <td>${apt.nickname}</td>
                    <td>${apt.phone}</td>
                    <td>${formatDate(apt.date)}</td>
                    <td>${apt.time}</td>
                `;
                tableBody.appendChild(row);
            });
        }

        // Format date
        function formatDate(dateStr) {
            const date = new Date(dateStr);
            return new Intl.DateTimeFormat('ru-RU', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            }).format(date);
        }

        // Appointment form submission
        document.getElementById('appointmentForm').addEventListener('submit', (e) => {
            e.preventDefault();

            const newAppointment = {
                id: Math.max(...appointments.map(a => a.id), 0) + 1,
                fio: document.getElementById('fio').value,
                animal: document.getElementById('animal').value,
                nickname: document.getElementById('nickname').value,
                phone: document.getElementById('phone').value,
                date: document.getElementById('date').value,
                time: document.getElementById('time').value
            };

            appointments.push(newAppointment);
            document.getElementById('appointmentForm').reset();
            goToPage('dashboard');
            alert('–ó–∞–ø–∏—Å—å —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω–∞!');
        });

        // Edit modal functions
        function openEditModal(id) {
            const apt = appointments.find(a => a.id === id);
            if (apt) {
                currentEditingId = id;
                document.getElementById('editFio').value = apt.fio;
                document.getElementById('editAnimal').value = apt.animal;
                document.getElementById('editNickname').value = apt.nickname;
                document.getElementById('editPhone').value = apt.phone;
                document.getElementById('editDate').value = apt.date;
                document.getElementById('editTime').value = apt.time;

                document.getElementById('editModal').classList.add('active');
            }
        }

        function closeModal() {
            document.getElementById('editModal').classList.remove('active');
            currentEditingId = null;
        }

        // Edit form submission
        document.getElementById('editForm').addEventListener('submit', (e) => {
            e.preventDefault();

            const apt = appointments.find(a => a.id === currentEditingId);
            if (apt) {
                apt.fio = document.getElementById('editFio').value;
                apt.animal = document.getElementById('editAnimal').value;
                apt.nickname = document.getElementById('editNickname').value;
                apt.phone = document.getElementById('editPhone').value;
                apt.date = document.getElementById('editDate').value;
                apt.time = document.getElementById('editTime').value;

                renderAppointments();
                closeModal();
                alert('–ó–∞–ø–∏—Å—å —É—Å–ø–µ—à–Ω–æ –æ–±–Ω–æ–≤–ª–µ–Ω–∞!');
            }
        });

        // Delete appointment
        function deleteAppointment(id) {
            if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –∑–∞–ø–∏—Å—å?')) {
                appointments = appointments.filter(a => a.id !== id);
                renderAppointments();
                alert('–ó–∞–ø–∏—Å—å —É—Å–ø–µ—à–Ω–æ —É–¥–∞–ª–µ–Ω–∞!');
            }
        }

        // Close modal on outside click
        document.getElementById('editModal').addEventListener('click', (e) => {
            if (e.target.id === 'editModal') {
                closeModal();
            }
        });

        // Login form
        document.getElementById('loginForm').addEventListener('submit', (e) => {
            e.preventDefault();
            goToPage('dashboard');
            alert('–í—ã —É—Å–ø–µ—à–Ω–æ –≤–æ—à–ª–∏ –≤ —Å–∏—Å—Ç–µ–º—É!');
        });

        // Register form
        document.getElementById('registerForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const password = document.getElementById('regPassword').value;
            const passwordConfirm = document.getElementById('regPasswordConfirm').value;

            if (password !== passwordConfirm) {
                alert('–ü–∞—Ä–æ–ª–∏ –Ω–µ —Å–æ–≤–ø–∞–¥–∞—é—Ç!');
                return;
            }

            goToPage('login');
            alert('–ê–∫–∫–∞—É–Ω—Ç —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω! –¢–µ–ø–µ—Ä—å –≤–æ–π–¥–∏—Ç–µ –≤ —Å–∏—Å—Ç–µ–º—É.');
            document.getElementById('registerForm').reset();
        });

        // Logout
